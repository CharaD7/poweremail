<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="poweremail_send_wizard_form">
            <field name="name">poweremail.send.wizard.form</field>
            <field name="model">poweremail.send.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Send mail Wizard">
                    <group col="6" colspan="4">
                        <field name="rel_model"/>
                       <!-- <field name="rel_model_ref" on_change="_on_change_ref(rel_model_ref)"/>-->
                        <newline />
                        <field name="from" />
                        <newline />
                        <field name="to" select="1" colspan="4" />
                        <newline />
                        <field name="cc" select="2" colspan="4" />
                        <newline />
                        <field name="bcc" select="2" colspan="4" />
                        <newline />
                        <field name="subject" select="2" colspan="4" />
                        <newline />
                    </group>
                    <separator string="" colspan="4" />
                    <notebook>
                        <page string="Body (Plain Text)">
                            <field name="body_text" select="2" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Body(HTML - Only Web Client)">
                            <field name="body_html" select="2" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                    <field name="signature"/>
                </form>
            </field>
        </record>

        <record id="act_poweremail_send_wizard_form" model="ir.actions.act_window">
            <field name="name">Send Mail Wizard</field>
            <field name="res_model">poweremail.send.wizard</field>
            <field name="src_model">poweremail.templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="auto_refresh" eval="1" />
            <field name="target">new</field>
        </record>

        <record id="ir_poweremail_wizard" model="ir.values">
            <field eval="'client_action_multi'" name="key2" />
            <field eval="'poweremail.templates'" name="model" />
            <field name="name">Send Email</field>
            <field eval="'ir.actions.act_window,'+str(act_poweremail_send_wizard_form)"
				name="value" />
            <field eval="True" name="object" />
        </record>


    </data>
</openerp>

